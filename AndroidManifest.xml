<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cybrosys.palmcalc"
    android:installLocation="auto"
    android:versionCode="4"
    android:versionName="2.2">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:xlargeScreens="true"
        android:requiresSmallestWidthDp="536" />


    <application
        android:icon="@drawable/palm_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar">
        <activity
            android:name="com.cybrosys.SplashScreen.SplashscreenActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cybrosys.palmcalc.PalmCalcActivity"></activity>
        <activity android:name="com.cybrosys.currency.Currency_Transprentlist"></activity>
        <activity android:name="com.cybrosys.palmcalc.UserSettingActivity" />
        <activity android:name="com.cybrosys.clock.AddTimeZone" />
        <activity
            android:name="com.cybrosys.scientific.Demoscreen"
            android:theme="@style/Transparent" />

    </application>

</manifest>